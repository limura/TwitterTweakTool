{
  "name": "TwitterTweakTool",
  "description": "TwitterTweakTool は、X(Twitter) を少しだけ使いやすくする chrome extension です。",
  "version": "1.4.3",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*", "https://x.com/*", "https://mobile.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "manifest_version": 3
}
